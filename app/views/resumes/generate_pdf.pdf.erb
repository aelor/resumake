<% @basic_data = @full_data[:basic][:data]%>
<% @work_data = @full_data[:work][:data]%>
<% @edu_data = @full_data[:education][:data] %>
<% @interest = @full_data[:interests][:data]%>
<html><head>
<title>My CV</title>
<meta content="text/html; charset=utf-8" http-equiv="Content-Type">
<meta content="CV Maker - https://cvmkr.com/" http-equiv="Generator">
<link type="text/css" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300&amp;subset=latin,latin-ext">
<style type="text/css">
    body {
        background: #f0f0f0;
        margin: 0;
        padding: 0;

        font-family: 'Open Sans', 'Helvetica Light', 'Helvetica Neue', 'Arial Narrow', Helvetica, Arial, serif;
        font-weight: 300;
        line-height: 22px;
        font-size: 14px;

        color: #000;
    }

    h1, h2, h3, h4 {
        font-family: 'Open Sans', 'Helvetica Light', 'Helvetica Neue', 'Arial Narrow', Helvetica, Arial, serif;
        font-weight: 300;
        font-weight: normal;
        margin: 0 0 15px 0;
        padding: 0;
    }
    h1 {
        font-size: 350%;
    }
    h2 {
        font-size: 210%;
    }
    h3 {
        font-size: 130%;
    }

    p {
        margin: 0 0 10px 0;
    }

    ul {
        margin: 0;
        list-style-type: square;
    }
    a {
        color: #222;
    }
    /* ________________________________________________________ */
    .rtl {
        direction: rtl;
    }
    .clear {
        clear: both;
    }

    #main {
        background: #fff;
        width: 900px;
        padding: 35px;
        margin: 0 auto 15px auto;
        overflow: hidden;

        box-shadow: 0 0 6px #ccc;
    }

    #title {
        line-height: 42px;
        border-bottom: 1px solid #000;
        padding-bottom: 20px;
        margin: 0px 0 20px 0;
    }

    #credit {
        margin-bottom: 20px;
        font-size: 11px;
        color: #999;
        text-align: center;
    }
    #credit a {
        color: #999;
    }

    p label {
        font-size: 110%;
        margin-right: 10px;
    }
    p label span.colon {
        display: inline;
    }


    .section {
        margin-bottom: 25px;
    }
    .section .set {
    }
    .item {
        margin: 0 0 20px 0;
    }

    /*  _____________________________ */
    .section .title {
        text-transform: uppercase;
        font-size: 160%;

        margin: 0 auto 15px auto;
        display: block;
    }
    .section .set {
        margin-left: 25px;
    }
    .section .set h3 {
        margin: 0;
    }



    .basic-info {
        border-top: 0;
    }
    .section.basic-info .title {
        float: left;
        border: 0;
    }
    .basic-info .set {
        float: right;
        width: 70%;
    }
    .basic-info .address {
        width: 40%;
        float: left;
    }
    .basic-info .r {
        float: right;
        width: 50%;
        text-align: right;
    }
    .basic-info label {
        font-family: 'Open Sans', 'Helvetica Light', 'Helvetica Neue', 'Arial Narrow', Helvetica, Arial, serif;
        font-weight: 300;
    }
    .basic-info label, .basic-info span  {
        display: inline !important;
    }
    .basic-info p {
        margin: 0;
    }

    .section span {
        display: block;
    }
    .section h3 span.l, .section span.r {
        width: 49%;
        float: left;
    }
    .section span.r {
        float: right;
        text-align: right;
    }
    .section-education .school,
    .section-work .job_title {
        font-size: 100%;
        display: block;
        margin: 5px 0 5px 0;
    }

    #photo {
        width: 160px;
        height: 200px;
        overflow: hidden;
        float: left;
        margin-top: 4px;
        border-radius: 4px;
    }
    #photo img {
        width: 100%;
        height: auto;
    }
    .header.photo {
        margin-left: 190px;
    }
    .header.photo #title {
        text-align: left;
    }
    .header.photo .basic-info {
        float: none;
        padding: 0;
    }


    @media screen and (max-width: 950px) {
        body {
            background: #fff;
        }
        #main {
            box-shadow: none;
            padding: 0;
            padding: 5px;
        }
    }
</style>
</head>
<body class="lang- ">

<div id="main">

  <h1 id="title"><%= @basic_data[:fullname] %></h1>
  <div class="basic-info section">
    <h2 class="title">Contact</h2>
    <div class="set">

      <p class="address">
					<span class="value">
						<%= @basic_data[:address1]%><br>
                        <%= @basic_data[:address2]%><br>
                        <%= @basic_data[:address3]%>
                    </span>
      </p>
      <div class="r">
        <p class="email"><span class="value"><%= @basic_data[:email]%></span></p>

        <p class="website"><span class="value"><%= @basic_data[:website]%></span></p>

        <p class="phone"><span class="value"><%= @basic_data[:phone]%></span></p>
      </div>
      <div class="clear"> </div>
    </div><!-- set //-->
    <div class="clear"> </div>
  </div><!-- basic-info //-->



  <div class="section section-work">
    <h2 class="title">Work experience</h2>
    <div class="set">

      <%i = 0%>
      <% @work_data[:company].count.times do%>
          <div class="item">
            <h3><span class="company l"><%= @work_data[:company][i] %></span>
              <span class="date r"><%= @work_data[:start][i] %> &mdash; <%= @work_data[:end][i] %></span>
            </h3>
            <span class="clear"> </span>
            <span class="job_title"><%= @work_data[:job_title][i] %></span><span class="info"><br></span><span class="clear"> </span>
          </div>
      <%i += 1%>
      <%end%>

    </div>
    <div class="clear"> </div>
  </div>

  <div class="section section-education">
    <h2 class="title">Education</h2>
    <div class="set">

      <%j = 0%>
      <% @edu_data[:course].count.times do%>
      <div class="item">
        <h3><span class="course l"><%= @edu_data[:course][j] %></span>
          <span class="date r"><%= @edu_data[:start][j] %> &mdash; <%= @edu_data[:end][j] %></span>
        </h3>
        <span class="clear"> </span>
        <span class="school"><%= @edu_data[:school][j] %></span><span class="clear"> </span>
      </div>
      <%j += 1%>
      <%end%>

    </div>
    <div class="clear"> </div>
  </div>
  <div class="section section-interests">
    <h2 class="title">Interests</h2>
    <div class="set">
      <div class="item">
        <span class="info"><%= @interest[:info]%></span>
      </div>
    </div>
    <div class="clear"> </div>
  </div>

</div>
<div id="credit">Made with <3 by <a href="www.rituraj.me/">Rituraj</a></div>


</body></html>